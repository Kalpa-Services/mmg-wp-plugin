{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.0/.schema/devbox.schema.json",
  "packages": [
    "php83",
    "php83Packages.composer",
    "mysql80",
    "php83Extensions.curl",
    "php83Extensions.dom",
    "php83Extensions.gd",
    "php83Extensions.mbstring",
    "php83Extensions.zip",
    "php83Extensions.intl",
    "php83Extensions.openssl",
    "nginx@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to the mmg-wp-plugin development environment!'",
      "mkdir -p logs/nginx",
      "NGINX_CONFDIR=devbox.d/nginx/nginx.conf",
      "NGINX_PATH_PREFIX=.devbox/virtenv/nginx",
      "NGINX_TMPDIR=.devbox/virtenv/nginx/temp"
    ],
    "scripts": {
      "test": [
        "composer run-script test"
      ],
      "lint": [
        "composer run-script lint"
      ],
      "setup": [
        "composer install"
      ]
    }
  }
}
